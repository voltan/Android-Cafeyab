<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_box"
    android:layout_height="match_parent">

    <com.faragostaresh.extra.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/main_grid_icon_padding_bottom"
        android:paddingTop="@dimen/main_grid_icon_padding_top"
        android:paddingLeft="@dimen/main_grid_icon_padding_left"
        android:paddingRight="@dimen/main_grid_icon_padding_right"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="@dimen/main_grid_text_padding_bottom"
        android:paddingTop="@dimen/main_grid_text_padding_top"
        android:paddingLeft="@dimen/main_grid_text_padding_left"
        android:paddingRight="@dimen/main_grid_text_padding_right"/>

</FrameLayout>